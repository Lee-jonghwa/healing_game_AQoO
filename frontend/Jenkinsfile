pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "frontend-app:latest"
        CONTAINER_NAME = "frontend"
        NGINX_CONFIG = "/etc/nginx/nginx.conf" // Nginx 설정 파일 경로
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'frontend',
                    url: 'https://lab.ssafy.com/s12-webmobile1-sub1/S12P11E203.git',
                    credentialsId: 'songhun-gitlab'
            }
        }

        stage('Check Node & NPM Version') {
            steps {
                sh 'node --version'  // Node.js 버전 확인
                sh 'npm --version'   // npm 버전 확인
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend/aqoo-fe') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('frontend') {
                    sh """
                        docker build -t ${DOCKER_IMAGE} .
                    """
                }
            }
        }

        stage('Stop & Remove Old Container') {
            steps {
                script {
                    sh "docker stop ${CONTAINER_NAME} || true"
                    sh "docker rm ${CONTAINER_NAME} || true"
                }
            }
        }

        stage('Configure Nginx and Deploy') {
            steps {
                script {
                    // Nginx 설정 파일 작성 (애플리케이션을 /usr/share/nginx/html에 서빙하도록 설정)
                    sh """
                        echo '
                        server {
                            listen 80;
                            server_name localhost;
                            root /usr/share/nginx/html;
                            index index.html;
                            location / {
                                try_files \$uri \$uri/ /index.html;
                            }
                        }' > nginx.conf
                    """
                    
                    // Docker 컨테이너 실행, Nginx를 사용하여 정적 파일을 서빙하도록 설정
                    sh """
                        docker run -d --name ${CONTAINER_NAME} \
                        -v \$(pwd)/frontend/aqoo-fe/out:/usr/share/nginx/html \
                        -v \$(pwd)/nginx.conf:/etc/nginx/nginx.conf \
                        -p 80:80 ${DOCKER_IMAGE}
                    """
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline completed."
            sh "docker ps -a"
        }
        failure {
            echo "Pipeline failed."
        }
    }
}
