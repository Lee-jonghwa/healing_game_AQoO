pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "frontend-app:latest"
        CONTAINER_NAME = "frontend"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'frontend',
                    url: 'https://lab.ssafy.com/s12-webmobile1-sub1/S12P11E203.git',
                    credentialsId: 'songhun-gitlab'
            }
        }

        stage('Check Node & NPM Version') {
            steps {
                sh 'node --version'  // Node.js 버전 확인
                sh 'npm --version'   // npm 버전 확인
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend/aqoo-fe') {
                    sh 'npm install'
                    sh 'npm run build'
		    sh 'npm run export'  // Next.js 정적 파일 빌드
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('frontend') {
                    sh "docker build -t ${DOCKER_IMAGE} ."
                }
            }
        }
	
	stage('Stop & Remove Old Container') {
            steps {
                script {
                    sh "docker stop ${CONTAINER_NAME} || true"
                    sh "docker rm ${CONTAINER_NAME} || true"
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    sh """
                        docker run -d --name ${CONTAINER_NAME} \
                        -p 80:80 ${DOCKER_IMAGE}
                    """
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline completed."
	    sh "docker ps -a"
        }
        failure {
            echo "Pipeline failed."
        }
    }
}
