pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'frontend', url: 'https://lab.ssafy.com/s12-webmobile1-sub1/S12P11E203.git'
            }
        }
        stage('Build') {
            steps {
                sh 'npm install'
                sh 'npm run build'
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker build -t frontend-app .'
                sh 'docker run -d -p 3000:3000 frontend-app'
            }
        }
    }
}